{
  "manifest_version": 2,
  "permissions": [
    "browserAction",
    "webNavigation"
  ],
  "name": "BearTube",
  "description": "A classic, quiet Youtube.",
  "version": "1.0.1",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/toolbar-icon-48.png",
    "default_title": "Enable/disable BearTube"
  },
  "background": {
    "scripts": ["service-worker.js"],
    "persistent": false
  }
}
